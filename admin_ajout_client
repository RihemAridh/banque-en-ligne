<?php
session_start();
require_once ('connect.php');
require_once ('admin_operations.php');
$admin = new Admin($cnx);
if (isset($_POST['nom'])) {
    $nom = $_POST['nom'];
    $prenom = $_POST['prenom'];
    $email = $_POST['email'];
    $password = $_POST['password'];
    $salaire = $_POST['salaire']; 
    $phone = $_POST['phone'];

    $admin->addClient($nom, $prenom, $email, $password, $salaire, $phone);

    header("Location: admin_voir_clients.php");
    exit();
}
